<!-- Okno do zarządzania zakupami samochodów w aplikacji ProjektZaliczeniowyPB -->
<Window x:Class="ProjektZaliczeniowyPB.ZakupyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zarządzanie Zakupami" Height="400" Width="750">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <!-- Wyświetlanie zakupów -->
        <DataGrid Name="dgZakupy" AutoGenerateColumns="True" IsReadOnly="True" Grid.Row="0" Margin="0,0,0,10"/>

        <!-- Sterowanie zakupami -->
        <StackPanel Grid.Row="1">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <!-- ComboBoxy do wyboru klienta, pracownika i samochodu -->
                <ComboBox Name="cbKlient" Width="150" Margin="5" DisplayMemberPath="Nazwisko"/>
                <ComboBox Name="cbPracownik" Width="150" Margin="5" DisplayMemberPath="Nazwisko"/>
                <ComboBox Name="cbSamochod" Width="150" Margin="5" DisplayMemberPath="Model"/>
                <DatePicker Name="dpDataZakupu" Width="150" Margin="5"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Button Content="Dodaj" Width="100" Margin="5" Click="BtnDodaj_Click"/>
                <Button Content="Usuń" Width="100" Margin="5" Click="BtnUsun_Click"/>
                <Button Content="Odśwież" Width="100" Margin="5" Click="BtnOdswiez_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
