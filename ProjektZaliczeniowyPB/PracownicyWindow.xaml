<Window x:Class="ProjektZaliczeniowyPB.PracownicyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zarządzanie Pracownikami" Height="550" Width="1050">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <!-- Tabela z pracownikami -->
        <DataGrid Name="dgPracownicy" AutoGenerateColumns="True" IsReadOnly="True"
                  SelectionMode="Single" SelectionChanged="dgPracownicy_SelectionChanged"
                  Grid.Row="0" Margin="0,0,0,10"/>

        <!-- Formularz pracownika -->
        <StackPanel Grid.Row="1" Orientation="Vertical">
            <WrapPanel Margin="0,0,0,10">
                <StackPanel Margin="5" Width="120">
                    <Label Content="Imię:"/>
                    <TextBox Name="txtImie"/>
                </StackPanel>
                <StackPanel Margin="5" Width="120">
                    <Label Content="Nazwisko:"/>
                    <TextBox Name="txtNazwisko"/>
                </StackPanel>
                <StackPanel Margin="5" Width="200">
                    <Label Content="Email:"/>
                    <TextBox Name="txtEmail"/>
                </StackPanel>
                <StackPanel Margin="5" Width="200">
                    <Label Content="Ulica:"/>
                    <TextBox Name="txtUlica"/>
                </StackPanel>
                <StackPanel Margin="5" Width="100">
                    <Label Content="Nr budynku:"/>
                    <TextBox Name="txtNumerBudynku"/>
                </StackPanel>
                <StackPanel Margin="5" Width="120">
                    <Label Content="Kod pocztowy:"/>
                    <TextBox Name="txtKodPocztowy"/>
                </StackPanel>
                <StackPanel Margin="5" Width="120">
                    <Label Content="Miejscowość:"/>
                    <TextBox Name="txtMiejscowosc"/>
                </StackPanel>
                <StackPanel Margin="5" Width="180">
                    <Label Content="Wydział:"/>
                    <ComboBox Name="cbWydzial" DisplayMemberPath="Nazwa"/>
                </StackPanel>
            </WrapPanel>

            <!-- Przyciskowe akcje -->
            <StackPanel Orientation="Horizontal">
                <Button Content="Dodaj" Width="100" Margin="5" Click="BtnDodaj_Click"/>
                <Button Content="Edytuj" Width="100" Margin="5" Click="BtnEdytuj_Click"/>
                <Button Content="Usuń" Width="100" Margin="5" Click="BtnUsun_Click"/>
                <Button Content="Odśwież" Width="100" Margin="5" Click="BtnOdswiez_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
