<!-- Okno do zarządzania polisami w aplikacji ProjektZaliczeniowyPB -->
<Window x:Class="ProjektZaliczeniowyPB.PolisyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zarządzanie Polisami" Height="400" Width="750">
    <!-- Główna siatka z marginesem -->
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <!-- Wyświetlanie listy polis -->
        <DataGrid Name="dgPolisy" AutoGenerateColumns="True" IsReadOnly="True" Grid.Row="0" Margin="0,0,0,10"/>

        <!-- Panel sterujący dla dodawania/usuwania polis -->
        <StackPanel Grid.Row="1">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <!-- ComboBox z zakupami jako powiązanie z polisą -->
                <ComboBox Name="cbZakup" Width="200" Margin="5" DisplayMemberPath="ZakupID"/>
                <!-- Daty rozpoczęcia i zakończenia -->
                <DatePicker Name="dpRozpoczecie" Width="150" Margin="5"/>
                <DatePicker Name="dpZakonczenie" Width="150" Margin="5"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Button Content="Dodaj" Width="100" Margin="5" Click="BtnDodaj_Click"/>
                <Button Content="Usuń" Width="100" Margin="5" Click="BtnUsun_Click"/>
                <Button Content="Odśwież" Width="100" Margin="5" Click="BtnOdswiez_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
