<!-- Okno do zarządzania polisami w aplikacji ProjektZaliczeniowyPB -->
<Window x:Class="ProjektZaliczeniowyPB.PolisyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zarządzanie Polisami" Height="450" Width="750">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <!-- Wyświetlanie listy polis -->
        <DataGrid Name="dgPolisy" AutoGenerateColumns="True" IsReadOnly="True" Grid.Row="0" Margin="0,0,0,10"/>

        <!-- Panel sterujący -->
        <StackPanel Grid.Row="1">
            <!-- Pola wejściowe z etykietami -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center">
                <!-- Zakup -->
                <StackPanel Margin="5" Width="200">
                    <Label Content="ID zakupu:"/>
                    <ComboBox Name="cbZakup" DisplayMemberPath="ZakupID"/>
                </StackPanel>
                <!-- Data rozpoczęcia -->
                <StackPanel Margin="5" Width="150">
                    <Label Content="Data rozpoczęcia:"/>
                    <DatePicker Name="dpRozpoczecie"/>
                </StackPanel>
                <!-- Data zakończenia -->
                <StackPanel Margin="5" Width="150">
                    <Label Content="Data zakończenia:"/>
                    <DatePicker Name="dpZakonczenie"/>
                </StackPanel>
            </StackPanel>

            <!-- Przyciskowe akcje -->
            <StackPanel Orientation="Horizontal">
                <Button Content="Dodaj" Width="100" Margin="5" Click="BtnDodaj_Click"/>
                <Button Content="Usuń" Width="100" Margin="5" Click="BtnUsun_Click"/>
                <Button Content="Odśwież" Width="100" Margin="5" Click="BtnOdswiez_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
