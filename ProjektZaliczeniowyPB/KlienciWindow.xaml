<Window x:Class="ProjektZaliczeniowyPB.KlienciWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zarządzanie Klientami" Height="550" Width="1000">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <!-- Tabela z klientami -->
        <DataGrid Name="dgKlienci" AutoGenerateColumns="True" IsReadOnly="True" SelectionMode="Single"
                  Grid.Row="0" Margin="0,0,0,10" SelectionChanged="dgKlienci_SelectionChanged"/>

        <!-- Panel dolny -->
        <StackPanel Grid.Row="1" Orientation="Vertical">

            <!-- Pola danych klienta -->
            <WrapPanel Margin="0,0,0,5">
                <StackPanel Margin="5" Width="120">
                    <Label Content="Imię:"/>
                    <TextBox Name="txtImie"/>
                </StackPanel>
                <StackPanel Margin="5" Width="120">
                    <Label Content="Nazwisko:"/>
                    <TextBox Name="txtNazwisko"/>
                </StackPanel>
                <StackPanel Margin="5" Width="180">
                    <Label Content="Email:"/>
                    <TextBox Name="txtEmail"/>
                </StackPanel>
                <StackPanel Margin="5" Width="120">
                    <Label Content="Telefon:"/>
                    <TextBox Name="txtTelefon"/>
                </StackPanel>
                <StackPanel Margin="5" Width="120">
                    <Label Content="Nr budynku:"/>
                    <TextBox Name="txtNumerBudynku"/>
                </StackPanel>
                <StackPanel Margin="5" Width="120">
                    <Label Content="Kod pocztowy:"/>
                    <TextBox Name="txtKodPocztowy"/>
                </StackPanel>
                <StackPanel Margin="5" Width="120">
                    <Label Content="Miejscowość:"/>
                    <TextBox Name="txtMiejscowosc"/>
                </StackPanel>
                <StackPanel Margin="5" Width="120">
                    <Label Content="Zakupy:"/>
                    <TextBox Name="txtZakupy"/>
                </StackPanel>
            </WrapPanel>


            <!-- Przyciskowe akcje -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="Dodaj" Width="100" Margin="5" Click="BtnDodaj_Click"/>
                <Button Content="Edytuj" Width="100" Margin="5" Click="BtnEdytuj_Click"/>
                <Button Content="Usuń" Width="100" Margin="5" Click="BtnUsun_Click"/>
                <Button Content="Odśwież" Width="100" Margin="5" Click="BtnOdswiez_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
